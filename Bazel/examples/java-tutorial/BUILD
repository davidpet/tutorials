package(default_visibility = ["//visibility:public"])

java_binary(
    name = "ProjectRunner",
    srcs = ["src/main/java/com/example/ProjectRunner.java"],
    main_class = "com.example.ProjectRunner",
    deps = [":greeter"],
)

java_library(
    name = "greeter",
    srcs = ["src/main/java/com/example/Greeting.java"],
    deps = [
        # @maven// is relative to the maven cache from
        # the WORKSPACE file instead of relative to
        # your workspace.
        # com_google_guava_guava is the target defined
        # in the package.
        # It is auto-generated by replacing . and -
        # with _ in the maven coordaintes
        # com.google.guava:guava
        "@maven//:com_google_guava_guava",
        "@maven//:com_google_errorprone_error_prone_annotations",
    ],
)

# You could run this target directly with 'bazel test //:GreetingTest'.
java_test(
    name = "GreetingTest",
    srcs = ["src/main/java/com/example/GreetingTest.java"],
    deps = [
        ":greeter",
        "@maven//:org_mockito_mockito_core",
    ],
)

# This will aggregate (via the tests array) all the tests.
# You can run it with 'bazel test //:AllTests'.
test_suite(
    name = "AllTests",
    tests = [
        ":GreetingTest",
    ],
)
